rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner() {
      return signedIn() && resource.data.userId == request.auth.uid;
    }

    function isNewOwner() {
      return signedIn() && request.resource.data.userId == request.auth.uid;
    }

    // Patient documents
    match /patients/{patientId} {
      allow read: if isOwner();
      allow create: if isNewOwner();
      allow update, delete: if isOwner();

      // All subcollections inherit patient ownership check
      match /labs/{labId} {
        allow read: if signedIn() && get(/databases/$(database)/documents/patients/$(patientId)).data.userId == request.auth.uid;
        allow create: if signedIn() && get(/databases/$(database)/documents/patients/$(patientId)).data.userId == request.auth.uid;
      }

      match /notes/{noteId} {
        allow read: if signedIn() && get(/databases/$(database)/documents/patients/$(patientId)).data.userId == request.auth.uid;
        allow create: if signedIn() && get(/databases/$(database)/documents/patients/$(patientId)).data.userId == request.auth.uid;
      }

      match /meds/{medId} {
        allow read: if signedIn() && get(/databases/$(database)/documents/patients/$(patientId)).data.userId == request.auth.uid;
        allow create, update: if signedIn() && get(/databases/$(database)/documents/patients/$(patientId)).data.userId == request.auth.uid;
      }

      match /aiLogs/{logId} {
        allow read: if signedIn() && get(/databases/$(database)/documents/patients/$(patientId)).data.userId == request.auth.uid;
        allow create: if signedIn();
      }

      match /events/{eventId} {
        allow read: if signedIn() && get(/databases/$(database)/documents/patients/$(patientId)).data.userId == request.auth.uid;
        allow create: if signedIn();
      }
    }
  }
}
