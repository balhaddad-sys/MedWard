rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Patients collection: users can only access their own patient records
    match /patients/{patientId} {
      // Allow creating a patient if authenticated and userId field matches the caller
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;

      // Allow read, update, delete only if authenticated and the record belongs to the caller
      allow read, update, delete: if request.auth != null
                                  && resource.data.userId == request.auth.uid;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
