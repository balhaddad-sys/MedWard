[
  {
    "id": "gfr",
    "title": "GFR (CKD-EPI 2021)",
    "description": "Estimates glomerular filtration rate using creatinine, age, and sex.",
    "inputs": [
      { "name": "creatinine", "label": "Creatinine (µmol/L)", "type": "number" },
      { "name": "age", "label": "Age (years)", "type": "number" },
      { "name": "sex", "label": "Sex", "type": "select", "options": ["M", "F"] }
    ],
    "interpretation": [
      { "range": "≥ 90", "label": "Normal or high", "color": "green" },
      { "range": "60-89", "label": "Mildly decreased", "color": "green" },
      { "range": "45-59", "label": "Mild-moderate decrease", "color": "amber" },
      { "range": "30-44", "label": "Moderate-severe decrease", "color": "amber" },
      { "range": "15-29", "label": "Severely decreased", "color": "red" },
      { "range": "< 15", "label": "Kidney failure", "color": "red" }
    ]
  },
  {
    "id": "curb65",
    "title": "CURB-65",
    "description": "Community-acquired pneumonia severity scoring.",
    "inputs": [
      { "name": "confusion", "label": "New confusion", "type": "checkbox" },
      { "name": "urea", "label": "Urea > 7 mmol/L", "type": "checkbox" },
      { "name": "rr", "label": "RR ≥ 30", "type": "checkbox" },
      { "name": "bp", "label": "SBP < 90 or DBP ≤ 60", "type": "checkbox" },
      { "name": "age", "label": "Age ≥ 65", "type": "checkbox" }
    ],
    "interpretation": [
      { "range": "0-1", "label": "Low risk — consider outpatient", "color": "green" },
      { "range": "2", "label": "Moderate risk — consider admission", "color": "amber" },
      { "range": "3-5", "label": "High risk — consider ICU", "color": "red" }
    ]
  },
  {
    "id": "wells",
    "title": "Wells Score (PE)",
    "description": "Clinical probability of pulmonary embolism.",
    "inputs": [
      { "name": "dvt", "label": "Clinical signs of DVT (+3)", "type": "checkbox", "score": 3 },
      { "name": "alternative", "label": "PE most likely diagnosis (+3)", "type": "checkbox", "score": 3 },
      { "name": "hr", "label": "Heart rate > 100 (+1.5)", "type": "checkbox", "score": 1.5 },
      { "name": "immobilization", "label": "Immobilization/surgery in past 4 weeks (+1.5)", "type": "checkbox", "score": 1.5 },
      { "name": "previous", "label": "Previous DVT/PE (+1.5)", "type": "checkbox", "score": 1.5 },
      { "name": "hemoptysis", "label": "Hemoptysis (+1)", "type": "checkbox", "score": 1 },
      { "name": "malignancy", "label": "Active malignancy (+1)", "type": "checkbox", "score": 1 }
    ],
    "interpretation": [
      { "range": "< 2", "label": "Low probability", "color": "green" },
      { "range": "2-6", "label": "Moderate probability", "color": "amber" },
      { "range": "> 6", "label": "High probability", "color": "red" }
    ]
  },
  {
    "id": "corrected-calcium",
    "title": "Corrected Calcium",
    "description": "Corrects total calcium for albumin level.",
    "inputs": [
      { "name": "calcium", "label": "Total Calcium (mmol/L)", "type": "number" },
      { "name": "albumin", "label": "Albumin (g/L)", "type": "number" }
    ],
    "interpretation": [
      { "range": "< 2.1", "label": "Hypocalcemia", "color": "red" },
      { "range": "2.1-2.6", "label": "Normal", "color": "green" },
      { "range": "> 2.6", "label": "Hypercalcemia", "color": "red" }
    ]
  },
  {
    "id": "anion-gap",
    "title": "Anion Gap",
    "description": "Calculates serum anion gap for metabolic acidosis workup.",
    "inputs": [
      { "name": "sodium", "label": "Sodium (mmol/L)", "type": "number" },
      { "name": "chloride", "label": "Chloride (mmol/L)", "type": "number" },
      { "name": "bicarb", "label": "Bicarbonate (mmol/L)", "type": "number" }
    ],
    "interpretation": [
      { "range": "8-12", "label": "Normal", "color": "green" },
      { "range": "> 12", "label": "Elevated — consider MUDPILES", "color": "red" }
    ]
  }
]
